<ApprovalScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "Aprovações Pendentes"
            font_size: dp(24)

        ScrollView:
            Label:
                id: aprovacoes_lista
                text: "Carregando aprovações pendentes..."
                size_hint_y: None
                height: self.texture_size[1]

        Button:
            text: "Voltar"
            on_press: root.manager.current = "dashboard"
