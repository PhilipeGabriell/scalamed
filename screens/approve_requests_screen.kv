# screens/approve_requests_screen.kv
<ApproveRequestsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Aprovar Solicitações de Troca"
            font_size: 24
            size_hint_y: None
            height: 50

        ScrollView:
            BoxLayout:
                id: requests_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

        Button:
            text: "Voltar ao Dashboard"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "dashboard"
