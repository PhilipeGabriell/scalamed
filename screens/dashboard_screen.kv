<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "Menu Principal"
            font_size: dp(24)

        Button:
            text: "Minhas Escalas"
            on_press: root.manager.current = "schedule"

        Button:
            text: "Solicitar Troca"
            on_press: root.manager.current = "request_swap"

        Button:
            text: "Aprovações Pendentes"
            on_press: root.manager.current = "approval"

        Button:
            text: "Histórico"
            on_press: root.manager.current = "history"

        Button:
            text: "Calendário"
            on_press: root.manager.current = "calendar"

        Button:
            text: "Ofertas de Troca"
            on_press: root.manager.current = "offer_swap"

        Button:
            text: "Sair"
            on_press: app.stop()
