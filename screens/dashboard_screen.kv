# screens/dashboard_screen.kv
<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Painel de Controle"
            font_size: 24
            size_hint_y: None
            height: 50

        Button:
            text: "Ver Escalas"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "schedule"

        Button:
            text: "Solicitações de Troca Pendentes"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "approve_requests"

        Button:
            text: "Solicitar Troca de Turno"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "request_swap"

        Button:
            text: "Sair"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "login"
