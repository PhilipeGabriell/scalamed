<DashboardScreen>:
    name: "dashboard"
    BoxLayout:
        orientation: "vertical"
        padding: [20, 20, 20, 20]
        spacing: 20

        Label:
            text: "Bem-vindo, Usuário!"
            font_size: 25
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "Minhas Escalas"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "schedule"

        Button:
            text: "Solicitar Troca de Turno"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "request_swap"

        Button:
            text: "Aprovações Pendentes"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "approval"

        Button:
            text: "Histórico de Trocas"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "history"

        Button:
            text: "Calendário de Plantões"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "calendar"

        Button:
            text: "Ofertas de Trocas"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "offer_swap"

        Button:
            text: "Sair"
            size_hint_y: None
            height: 50
            on_press: app.root.current = "login"
