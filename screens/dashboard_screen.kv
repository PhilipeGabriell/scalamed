<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Dashboard"
            font_size: 24

        Button:
            text: "Ver Escalas"
            on_press: app.root.current = 'schedule'

        Button:
            text: "Solicitar Troca"
            on_press: app.root.current = 'request_swap'

        Button:
            text: "Aprovações"
            on_press: app.root.current = 'approval'

        Button:
            text: "Histórico"
            on_press: app.root.current = 'history'
