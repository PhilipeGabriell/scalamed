# screens/request_swap_screen.kv
<RequestSwapScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Solicitar Troca de Turno"
            font_size: 24
            size_hint_y: None
            height: 50

        TextInput:
            id: turno_desejado
            hint_text: "Turno Desejado (manhã/tarde/noite)"
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: setor_desejado
            hint_text: "Setor Desejado"
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: "Enviar Solicitação de Troca"
            size_hint_y: None
            height: 50
            on_release: root.enviar_solicitacao(turno_desejado.text, setor_desejado.text)

        Label:
            id: mensagem
            text: ""
            color: 1, 0, 0, 1  # Vermelho para mensagens de erro
