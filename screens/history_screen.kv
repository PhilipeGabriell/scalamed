<HistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "Histórico de Trocas"
            font_size: dp(24)

        ScrollView:
            Label:
                id: historico_lista
                text: "Carregando histórico..."
                size_hint_y: None
                height: self.texture_size[1]

        Button:
            text: "Voltar"
            on_press: root.manager.current = "dashboard"
