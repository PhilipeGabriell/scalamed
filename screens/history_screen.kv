<HistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.8, 1, 0.8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        
        Label:
            text: "Hist√≥rico de Trocas"
            font_size: '24sp'
            size_hint_y: None
            height: 50
            halign: "center"
            valign: "middle"
            color: 0, 0, 0, 1
            font_name: "Roboto"

        ScrollView:
            BoxLayout:
                id: historico_lista
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

        Button:
            text: "Voltar"
            size_hint_y: None
            height: 50
            background_color: 0.4, 0.8, 1, 1
            color: 1, 1, 1, 1 
            on_press: app.root.current = 'dashboard'
            font_name: "Roboto"
