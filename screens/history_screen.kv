<HistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Histórico de Trocas"
            font_size: 24

        ScrollView:
            size_hint: (1, 0.8)
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                Label:
                    text: "Data: 20/11/2024 | Troca: João -> Ana | Status: Aprovado"
                Label:
                    text: "Data: 21/11/2024 | Troca: Pedro -> Maria | Status: Rejeitado"

        Button:
            text: "Voltar ao Menu Principal"
            size_hint: (1, 0.1)
            on_press: app.root.current = 'dashboard'
