<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Bem-vindo ao Scalamed"
            font_size: 24

        TextInput:
            id: email
            hint_text: "E-mail"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Senha"
            password: True
            multiline: False

        Button:
            text: "Entrar"
            on_press: app.root.current = 'dashboard'
