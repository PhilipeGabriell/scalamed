<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "Bem-vindo ao Scalamed"
            font_size: dp(24)

        TextInput:
            id: email
            hint_text: "Digite seu email"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Digite sua senha"
            password: True
            multiline: False

        Button:
            text: "Entrar"
            on_press: root.fazer_login(email.text, senha.text)

        Button:
            text: "Sair"
            on_press: app.stop()
