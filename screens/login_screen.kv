<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Login"
            font_size: 24

        TextInput:
            id: email
            hint_text: "Email"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Senha"
            password: True
            multiline: False

        Button:
            text: "Entrar"
            on_press: root.fazer_login(email.text, senha.text)

        Button:
            text: "Cadastrar Usu√°rio"
            on_press: app.root.current = "register"
