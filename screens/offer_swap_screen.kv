<OfferSwapScreen>:
    canvas.before:
        Color:
            rgba: 0.6, 0.9, 0.6, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20

        Label:
            text: "Ofertas de Troca"
            font_size: '24sp'
            size_hint_y: None
            height: 50
            halign: "center"
            valign: "middle"
            color: 0, 0, 0, 1
            font_name: "Roboto"

        ScrollView:
            do_scroll_y: True

            BoxLayout:
                id: ofertas_lista
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

        Button:
            text: "Voltar"
            size_hint_y: None
            height: 50
            background_color: 0.4, 0.8, 1, 1
            color: 1, 1, 1, 1
            on_release: app.root.current = "dashboard"
            font_name: "Roboto"
