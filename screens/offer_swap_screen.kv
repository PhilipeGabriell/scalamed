<OfferSwapScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Oferecer Troca"
            font_size: 24
            size_hint_y: 0.2

        TextInput:
            id: data_input
            hint_text: "Digite a data (YYYY-MM-DD)"
            multiline: False
            size_hint_y: 0.2

        TextInput:
            id: turno_input
            hint_text: "Digite o turno"
            multiline: False
            size_hint_y: 0.2

        Button:
            text: "Oferecer"
            size_hint_y: 0.2
            on_press: root.oferecer_troca(data_input.text, turno_input.text)

        Button:
            text: "Voltar"
            size_hint_y: 0.2
            on_press: app.root.current = "dashboard"
