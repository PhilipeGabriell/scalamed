<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Cadastrar Funcionário"
            font_size: '24sp'
            size_hint_y: None
            height: self.texture_size[1] + 10
            halign: 'center'
            font_name: "Roboto"
            color: 0, 0, 0, 1
        TextInput:
            id: nome_input
            hint_text: "Nome do Funcionário"
            size_hint_y: None
            height: 40
            multiline: False

        TextInput:
            id: email_input
            hint_text: "Email do Funcionário"
            size_hint_y: None
            height: 40
            multiline: False

        TextInput:
            id: senha_input
            hint_text: "Senha"
            password: True
            size_hint_y: None
            height: 40
            multiline: False

        Button:
            text: "Cadastrar"
            size_hint_y: None
            height: 50
            background_color: 0.3, 0.5, 1, 1
            color: 1, 1, 1, 1
            on_release: root.realizar_cadastro()

        Button:
            text: "Cancelar"
            size_hint_y: None
            height: 50
            background_color: 0.8, 0.8, 0.8, 1
            color: 1, 1, 1, 1
            on_release: root.manager.current = 'login'
