<RequestSwapScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        Label:
            text: "Solicitar Troca de Plantão"
            font_size: dp(24)

        TextInput:
            id: plantao_origem
            hint_text: "Digite o plantão de origem"
            multiline: False

        TextInput:
            id: sugestao_data
            hint_text: "Digite a data sugerida para troca (YYYY-MM-DD)"
            multiline: False

        Button:
            text: "Enviar Solicitação"
            on_press: root.enviar_solicitacao(plantao_origem.text, sugestao_data.text)

        Button:
            text: "Voltar"
            on_press: root.manager.current = "dashboard"
