<RequestSwapScreen>:
    name: "request_swap"
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20

        Label:
            text: "Ofertas de Trocas"
            font_size: '20sp'
            size_hint_y: None
            height: 40

        Button:
            text: "Adicionar Oferta"
            size_hint_y: None
            height: 50
            on_release: root.add_offer()

        Button:
            text: "Voltar"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "dashboard"
