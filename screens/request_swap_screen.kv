<RequestSwapScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Solicitar Troca de Turno"
            font_size: 24

        TextInput:
            id: data
            hint_text: "Data da Troca (AAAA-MM-DD)"
            multiline: False

        TextInput:
            id: turno
            hint_text: "Turno (manhã/tarde/noite)"
            multiline: False

        TextInput:
            id: motivo
            hint_text: "Motivo da Troca"
            multiline: False

        Button:
            text: "Enviar Solicitação"
            on_press: app.root.current = 'dashboard'

        Button:
            text: "Voltar ao Menu Principal"
            on_press: app.root.current = 'dashboard'
